  "compilerOptions": {
    "outDir": "build",
    "target": "ESNext",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "removeComments": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}
