{
  "name": "terram",
  "version": "0.1.0",
  "description": "Terram provides a foundational base for XRPs SDKs.",
  "main": "index.js",
  "repository": "https://github.com/xpring-eng/terram.git",
  "author": "Keefer Taylor | Xpring Engineering <keefer@ripple.com>",
  "license": "MIT",
  "directories": {
    "tests": "tests"
  },
  "files": [
    "*.js",
    "test/*.js"
  ],
  "dependencies": {
    "bip39": "^3.0.2",
    "chai": "^4.2.0",
    "google-protobuf": "3.9.1",
    "is-hex": "^1.1.3",
    "mocha": "^6.2.0",
    "ripple-address-codec": "^2.0.1",
    "ripple-binary-codec": "^0.2.2",
    "ripple-bip32": "0.0.3",
    "ripple-keypairs": "^0.11.0"
  },
  "scripts": {
    "pretest": "./scripts/regenerate_protos.sh",
    "test": "nyc --all mocha --check-leaks"
  },
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-mocha": "6.0.0",
    "husky": "3.0.2",
    "nyc": "14.1.1",
    "prettier": "1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint ./ --fix && prettier '**/*.js' --write"
    }
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "check-leaks": true,
    "exclude": [
      "generated/*.js",
      "test/**/*.js"
    ]
  }
}
