{
  "name": "@xpring-eng/xpring-common-js",
  "version": "1.0.26",
  "description": "Common JavaScript for use within the Xpring Platform",
  "main": "build/src/index.js",
  "repository": "https://github.com/xpring-eng/xpring-common-js.git",
  "author": "Xpring Engineering",
  "license": "MIT",
  "directories": {
    "tests": "tests"
  },
  "files": [
    "build/**/*"
  ],
  "dependencies": {
    "@types/google-protobuf": "3.7.1",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "bip32": "2.0.4",
    "bip39": "^3.0.2",
    "google-protobuf": "3.9.1",
    "grpc": "1.23.3",
    "grpc_tools_node_protoc_ts": "2.5.4",
    "is-hex": "^1.1.3",
    "ripple-address-codec": "^2.0.1",
    "ripple-binary-codec": "^0.2.2",
    "ripple-keypairs": "^0.11.0",
    "typescript": "3.5.3"
  },
  "scripts": {
    "clean": "rm -rf ./generated ./dist ./build",
    "pretest": "./scripts/regenerate_protos.sh && tsc",
    "test": "nyc mocha",
    "prepublishOnly": "npm test && tsc -d && mkdir -p build/generated && cp generated/* build/generated/",
    "webpack": "npm run clean && ./scripts/regenerate_protos.sh && rm ./generated/*grpc_pb.* && tsc && npx webpack"
  },
  "devDependencies": {
    "@types/chai": "4.2.0",
    "@types/mocha": "5.2.7",
    "chai": "4.2.0",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-mocha": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "3.0.2",
    "mocha": "6.2.0",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "source-map-support": "0.5.13",
    "ts-node": "8.3.0",
    "typescript-eslint-parser": "22.0.0",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint **/*.ts --fix && prettier '**/*.ts' --write"
    }
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "all": true,
    "check-coverage": true,
    "check-leaks": true
  }
}
