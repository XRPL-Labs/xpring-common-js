{
    "env": {
        "es6": true,
        "mocha": true,  
        "node": true
    },
    "extends": [ 
        "eslint:recommended",
        "plugin:mocha/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
        "mocha"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "strict": [
            "error",
            "global"
        ],
        "class-methods-use-this": [ "error" ],
        "default-case": ["error"],
        "eqeqeq": ["error"],
        "no-eval": ["error"],
        "no-magic-numbers": ["error"],
        "require-await": ["error"],
        "no-shadow": ["error"],
        "global-require": ["error"],
        "eol-last": ["error", "always"],
        "sort-imports": ["error"],
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
}
